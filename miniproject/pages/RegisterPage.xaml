<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="miniproject.pages.RegisterPage"
             xmlns:viewmodel="clr-namespace:miniproject.Viewmodel"
             xmlns:model="clr-namespace:miniproject.Model"
             Shell.NavBarIsVisible="False"
             x:DataType="viewmodel:RegisterViewmodel"
             Title="RegisterPage"
             BackgroundColor="#EBE5DD">

    <VerticalStackLayout
        WidthRequest="800"
        Padding="20"
        HorizontalOptions="Center">
        <HorizontalStackLayout Spacing="10"
                               HorizontalOptions="Center">
            <Button Text="Home"
                    BackgroundColor="#FF0066FF"
                    TextColor="White"
                    FontSize="14"
                    FontAttributes="Bold"
                    WidthRequest="120"
                    HeightRequest="50"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RegisterViewmodel}}, Path=GotoPageCommand}"
                    CommandParameter="HomePage"/>

            <Button Text="Profile"
                    BackgroundColor="#008000"
                    TextColor="White"
                    FontSize="14"
                    FontAttributes="Bold"
                    WidthRequest="120"
                    HeightRequest="50"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RegisterViewmodel}}, Path=GotoPageCommand}"
                    CommandParameter="ProfilePage"/>
        </HorizontalStackLayout>
        <Border Padding="15"
                StrokeShape="RoundRectangle 10"
                Stroke="LightGray"
                StrokeThickness="1"
                BackgroundColor="#F5F5F5"
                Margin="0,5">
            <HorizontalStackLayout Spacing="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Padding="0,2">

                <!-- Search Label -->
                <Label Text="ค้นหาชื่อวิชา"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                       VerticalOptions="Center"/>

                <!-- Search Entry -->
                <Entry
                    Placeholder="พิมพ์ชื่อวิชาที่ต้องการค้นหา..."
                    TextColor="Black"
                    HorizontalTextAlignment="Start"
                    WidthRequest="250"
                    HeightRequest="40"
                    PlaceholderColor="Gray"
                    BackgroundColor="White"
                    ClearButtonVisibility="WhileEditing"
                    Text="{Binding CourseName}"></Entry>


                <!-- Search Button -->
                <Button Text="ค้นหา"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RegisterViewmodel}}, Path=SearchCourseCommand}"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="5"
                        WidthRequest="80"
                        HeightRequest="40">

                </Button>
            </HorizontalStackLayout>

        </Border>

        <HorizontalStackLayout Spacing="15">

            <Border Padding="15"
                    StrokeShape="RoundRectangle 15"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    Margin="0,5"
                    WidthRequest="370">

                <VerticalStackLayout Spacing="10">
                    <Label Text="📘 วิชาที่ลงทะเบียน"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333333"
                           HorizontalOptions="Center"/>

                    <CollectionView ItemsSource="{Binding Student}"
                                    HeightRequest="400">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:Students">

                                <CollectionView ItemsSource="{Binding CoursesEnrolled}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="model:CoursesEnrolled">
                                            <Border Padding="10"
                                                    StrokeShape="RoundRectangle 10"
                                                    Stroke="LightGray"
                                                    StrokeThickness="1"
                                                    BackgroundColor="#F9F9F9"
                                                    Margin="5">
                                                <VerticalStackLayout Spacing="8">
                                                    <Label Text="{Binding CourseName, StringFormat='📖 {0}'}"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="DarkBlue"/>
                                                    <Label Text="{Binding CourseId, StringFormat='รหัสวิชา: {0}'}"
                                                           FontSize="12"
                                                           TextColor="Gray"/>

                                                    <HorizontalStackLayout Spacing="10">
                                                        <Label Text="{Binding Year, StringFormat='ปี: {0}'}"
                                                               FontSize="12"
                                                               TextColor="#555555"/>
                                                        <Label Text="{Binding Term, StringFormat='เทอม: {0}'}"
                                                               FontSize="12"
                                                               TextColor="#555555"/>
                                                    </HorizontalStackLayout>
                                                    <Label Text="{Binding Credits, StringFormat='📌 หน่วยกิต: {0}'}"
                                                           FontSize="12"
                                                           TextColor="#555555"/>
                                                    <Label Text="{Binding Instructor, StringFormat='👨‍🏫 อาจารย์: {0}'}"
                                                           FontSize="12"
                                                           TextColor="#555555"/>
                                                    <Button
                                                        HorizontalOptions="Start"
                                                        Text="ถอนวิชา"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RegisterViewmodel}}, Path=DropCourseCommand}"
                                                        CommandParameter="{Binding CourseId}"
                                                        BackgroundColor="Red"
                                                        TextColor="White"
                                                        CornerRadius="10"
                                                        WidthRequest="100"/>
                                                </VerticalStackLayout>
                                            </Border>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- วิชาที่เปิดให้ลงทะเบียน -->
            <Border Padding="15"
                    StrokeShape="RoundRectangle 15"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    Margin="0,5"
                    WidthRequest="370">

                <VerticalStackLayout Spacing="10">
                    <Label Text="📝 วิชาที่เปิดให้ลงทะเบียน"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333333"
                           HorizontalOptions="Center"/>

                    <CollectionView ItemsSource="{Binding Course}"
                                    HeightRequest="400">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:Courses">

                                <Border Padding="10"
                                        StrokeShape="RoundRectangle 10"
                                        Stroke="LightGray"
                                        StrokeThickness="1"
                                        BackgroundColor="#F9F9F9"
                                        Margin="5">
                                    <VerticalStackLayout Spacing="8">
                                        <Label Text="{Binding CourseName, StringFormat='📖 {0}'}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="DarkGreen"/>
                                        <Label Text="{Binding CourseId, StringFormat='รหัสวิชา: {0}'}"
                                               FontSize="12"
                                               TextColor="Gray"/>
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding Year, StringFormat='ปี: {0}'}"
                                                   FontSize="12"
                                                   TextColor="#555555"/>
                                            <Label Text="{Binding Term, StringFormat='เทอม: {0}'}"
                                                   FontSize="12"
                                                   TextColor="#555555"/>
                                        </HorizontalStackLayout>
                                        <Label Text="{Binding Credits, StringFormat='📌 หน่วยกิต: {0}'}"
                                               FontSize="12"
                                               TextColor="#555555"/>
                                        <Label Text="{Binding Instructor, StringFormat='👨‍🏫 อาจารย์: {0}'}"
                                               FontSize="12"
                                               TextColor="#555555"/>
                                        <Button
                                            HorizontalOptions="Start"
                                            Text="ลงทะเบียน"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RegisterViewmodel}}, Path=AddCourseCommand}"
                                            CommandParameter="{Binding CourseId}"
                                            BackgroundColor="DarkGreen"
                                            TextColor="White"
                                            CornerRadius="10"
                                            WidthRequest="100"/>
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
